extends ../layouts/common

block content
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger= error

  form(action="/users/create", method="POST")
    .form-group
      label(for="name") Name
      input.form-control#name(name="name", value=values ? values.name : '')
    .form-group
      label(for="phone") Name
      input.form-control#phone(name="phone", value=values ? values.phone : '')

      button.btn.btn-primary Create