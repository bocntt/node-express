extends ../layouts/common

block content
  h1 Create User
  if errors
    each error in errors
      .alert.alert-danger= error

  form(action="/users/create", method="POST", enctype="multipart/form-data")
    .form-group
      label(for="name") Name
      input.form-control#name(name="name", value=values ? values.name : '')
    .form-group
      label(for="phone") Phone
      input.form-control#phone(name="phone", value=values ? values.phone : '')
    .form-group
      label(for="avatar") Avatar
      input.form-control-file#avatar(type="file", name="avatar", value=values ? values.avatar : '')

    button.btn.btn-primary Create