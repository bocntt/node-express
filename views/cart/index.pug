extends ../layouts/common

block content
  .cart
    h2.d-flex.justify-content-between.align-items-center.mb-3
      span.text-muted Shopping Cart
      span.badge.badge-secondary.badge-pill

    if carts
      ul.list-group.mb-3
        each cart, productId in carts
          li.list-group-item.d-flex.justify-content-between.lh-condensed
            div
              h6.my-0= products[productId].name
              small.text-muted= products[productId].description

            span.text-muted= cart